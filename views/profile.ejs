<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="containers">
        <div class="cards">
          <div class="profile-picture">
            <img src="https://images.unsplash.com/photo-1632813161361-d3a822fd5c26?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8ZnVsbCUyMGhkJTIwd2FsbHBhcGVyfGVufDB8fDB8fHww" alt="Profile Picture">
          </div>
          <h2 class="name"><%= user.username %></h2>
          <h3 class="username">@<%= user.fullname %></h3>
          <p class="tagline">i am a book lover </p>
          <p class="description">we are building something great</p>
          <a href="/logout" class="button">logout</a>

          <form action="/upload" method="POST" entype="multipart/form-data">
            <input type="text" name="filecaption" placeholder="some caption please">
            <input type="file" name="file">
            <input type="submit">

          </form>
        </div>
    </div>
    <div class="container">
        <div class="cardes flex">
          <% user.posts.forEach(function(post){ %>
            <div class="card" style="width: 18rem;">
              <img src="/images/uploads/<%= posts.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= posts.ImageText %></h5>
              </div>
            </div>
          <%}) %>
        </div>
    </div>
  </body>
</html>